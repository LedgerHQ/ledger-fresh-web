{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "composite": true,
    "target": "es6",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
